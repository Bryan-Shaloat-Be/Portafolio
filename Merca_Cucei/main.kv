<home>
    canvas:
        Color:
            rgb: 0,0.5647058823529412, 0.7568627450980392
        Rectangle: 
            size: self.size
            pos: self.pos
    MDNavigationLayout:
        MDTopAppBar:
            title: "Mercado CUCEI"
            left_action_items: [["menu", lambda x: nave_drawer.set_state()]]
            right_action_items: [["card-search", lambda x: root.filtros(self)]]
            pos_hint: {'y': 0.89}
        MDScreenManager:
            id: controlador
            MDScreen:
                name: "Home"      
                BoxLayout:
                    id: box_publicaciones
                    ScrollView:
                        size_hint: (0.8, 0.89)    
                        GridLayout:
                            id:container
                            size_hint_y: None
                            size_hint_x: 1
                            cols: 1
                            row_default_height: root.height*0.88
                            height: self.minimum_height
                            spacing: 8
            MDScreen:
                name: "comentarios"
                    
            MDScreen:
                name: "Historial"
                MDLabel:
                    text: "historial"
                    halign: "center"
                    valign: "middle"
            MDScreen:
                name: "perfil"
                FloatLayout:
                    id:perfil_card
                    size_hint: 1, 1
            MDScreen:
                name: "crear_publicacion"
                FloatLayout:
                    id: box1
                    size_hint: 1,0.90
                    MDFloatingActionButton:
                        size_hint: .50, .10
                        pos_hint: {'x': 0.25, 'y': 0.03}
                        id: box
                        icon: "plus"
                        on_release:
                    MDCard:
                        size_hint: 0.9,0.8
                        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
                        FloatLayout
                            size_hint: 1,1
                            MDTextField:
                                id:AC
                                pos_hint: {'x': .10, 'y': 0.75}
                                size_hint: 0.8, None
                                icon_right: 'format-title'
                                hint_text: 'TITULO'
                                mode: "rectangle"
                                text_color_focus: 0,0,0,1
                                hint_text_color_focus: 0,0,0,1
                                line_color_focus: 0,0,0,1
                                icon_right_color_focus: 0,0,0,1
                                fill_color_normal: 1,1,1,.95
                                fill_color_focus: 1,1,1.95
                            MDIconButton:
                                icon: "file-image"
                                pos_hint: {'x': .10, 'y': 0.60}
                                size_hint: .8, None
                                on_release:
                                    root.up_image()
                            MDTextField:
                                id:AC3
                                pos_hint: {'x': .10, 'y': 0.45}
                                size_hint: 0.35, None
                                icon_right: 'cash'
                                hint_text: 'PRECIO'
                                mode: "rectangle"
                                text_color_focus: 0,0,0,1
                                hint_text_color_focus: 0,0,0,1
                                line_color_focus: 0,0,0,1
                                icon_right_color_focus: 0,0,0,1
                                fill_color_normal: 1,1,1,.95
                                fill_color_focus: 1,1,1.95
                            MDTextField:
                                id:AC4
                                pos_hint: {'x': .10, 'y': 0.09}
                                size_hint: 0.8, .35
                                icon_right: 'card-text'
                                hint_text: 'DESCRIPCION'
                                mode: "rectangle"
                                text_color_focus: 0,0,0,1
                                hint_text_color_focus: 0,0,0,1
                                line_color_focus: 0,0,0,1
                                icon_right_color_focus: 0,0,0,1
                                fill_color_normal: 1,1,1,.95
                                fill_color_focus: 1,1,1.95
                                multiline: True
                            MDTextField:
                                id:AC5
                                pos_hint: {'x': .5, 'y': 0.45}
                                size_hint: 0.4, None
                                icon_right: 'card-text'
                                hint_text: 'Categoria'
                                mode: "rectangle"
                                text_color_focus: 0,0,0,1
                                hint_text_color_focus: 0,0,0,1
                                line_color_focus: 0,0,0,1
                                icon_right_color_focus: 0,0,0,1
                                fill_color_normal: 1,1,1,.95
                                fill_color_focus: 1,1,1.95
                                on_focus: 
                                    root.guardar_categoria()
                                readonly: True
                            MDLabel:
                                text: "NUEVA PUBLICACION"
                                pos_hint:{'x': .25, 'y': 0.43}

        MDNavigationDrawer:
            id:nave_drawer
            padding: 0, 56, 12, 16
            type: "modal"
            radius: (0, 16, 16, 0)
                
            MDNavigationDrawerMenu:
                
                MDNavigationDrawerHeader:
                    title: "MERCADO CUCEI"
                    title_color: "#4a4939"
                    source: "C:\\Users\PC BRYAN\\.virtualenvs\\mercadillo\\2.jpg"
                    spacing: "10dp"
                    padding: "8dp", 0, 0, "30dp"
                    
                MDNavigationDrawerDivider:

                OneLineIconListItem:
                    text: "Home"
                    on_release:
                        root.reinicio()
                        controlador.current = "Home"
                        nave_drawer.set_state("close")
                    IconLeftWidget:
                        icon: "home"

                OneLineIconListItem:
                    text: "Perfil"
                    on_release:
                        root.reinicio()
                        root.perfil()
                        nave_drawer.set_state("close") 
                        controlador.current = "perfil"
                    IconLeftWidget:
                        icon: "account"

                OneLineIconListItem:
                    text: "Crear Publicacion"
                    on_release:
                        root.reinicio()
                        nave_drawer.set_state("close")
                        controlador.current = "crear_publicacion"
                    IconLeftWidget:
                        icon: "account-box"
                OneLineIconListItem:
                    id: btn_f
                    text: "Salir"    # COMO SALIR A LOGIN
                    on_press:
                        root.reinicio()
                        root.on_enter2()
                        nave_drawer.set_state("close")
                    IconLeftWidget:
                        icon: "exit-run"

                            

